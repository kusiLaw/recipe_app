<p style="color: green"><%= notice %></p>

<%if @recipes.length > 0%>

   <h2>Recipes</h2>

   <div id="recipes">
     <% @recipes.each do |recipe| %>
       <%= render recipe %>
       <p>
         <%= link_to "Show this recipe", recipe %>
       </p>
     <% end %>
   </div>
<%else%>
   <h2>Public Recipes</h2>
   <p>There is no public recipes yet</p>
 
<%end%>

