<p style="color: green"><%= notice %></p>

<div class="foods-show c-flex">
  <h2>Foods</h2>
  <%= link_to "Add Food", new_food_path,  class: 'add-recipes'%>
  
  <table class='food_table'>
    <tr>
       <th>Food</th>
       <th>Measurement unit</th>
       <th>Quantity</th>
       <th>Unit Price</th>
       <th>Action</th>
    </tr>

    <% @foods.each do |food| %>
     <%if current_user == food.user%>
       <tr>
         <td> <%= food.name %> </td>
         <td> <%= food.measurement_unit %> </td>
         <td> <%= food.quantity %> </td>
         <td> $ <%=  food.price %> </td>
         <td> <%= link_to "Delete", food , data: {turbo_method: :delete, 
              turbo_confirm: "Are you sure you want to delete?"}%>   </td>
       </tr>
     <%end%>
    <% end %>

  </table>
</div>